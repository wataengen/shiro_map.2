  <div class="row justify-content-left">
    <div class="mt-2 ms-1">
      <% if notification.subject.follower.icon_image.attached? %>
        <p><%= image_tag notification.subject.follower.icon_image, class: "rounded-circle border border-secondary", size: "40x40" %></p>
      <% else %>
        <P><%= image_tag 'sengoku_busyou_shiki.png', class: "rounded-circle border border-secondary", size: "40x40" %></P>
      <% end %>
    </div>
    <%= link_to notification.subject.follower.nick_name, member_path(notification.subject.follower) %>
    があなたをフォローしました
    <%= " (#{time_ago_in_words(notification.created_at)}前)" %>
  </div>
