<div class="container p-3">
  <div class="row">
  <div class="col-12">
    <%= render "/layouts/error_message", resource: @post %>
    <%= form_with model: @post, "data-turbolinks": false do |f| %>
    <h3>新規投稿</h3>

      <div class="row">
        <div class="col-3">画像（4枚まで投稿可能）</div>
        <div class="col-6">
          <%= f.file_field :images, accpet: "image/", multiple: true %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">コメント（200文字まで投稿可能）</div>
        <div class="col-6">
          <%= f.text_area :post_text, size: "60x5" %>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <%= f.label :draft_status, "投稿を公開する" %>
          <%= f.check_box :draft_status, checked: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-3">タグ<br>（,(カンマ)で区切ると複数タグの追加が可能です）</div>
        <div class="col-6">
          <%= f.text_field :name, value: @tag_list, size: 15 %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">
          <%= f.submit '投稿する', class: "btn btn-success" %>
        </div>
        <% end %>
        <div class="col-3">
          <%= link_to posts_draft_index_member_path(current_member) do %>
            <buttun class="btn btn-secondary">下書き一覧を見る</buttun>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
