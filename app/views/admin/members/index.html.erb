<%= render 'admin/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3>会員一覧　全件</h3>

      <tabel>
        <thead>
          <th>会員ID</th>
          <th>ニックネーム</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <td><%= member.id %></td>
            <td>
              <%= link_to member.nick_name, admin_member_path(member.id) %>
            </td>
            <td><%= member.email %></td>
            <td>
              <% if member.is_deleted == true %>
                <b class="text-success">有効</b>
              <% else %>
                <b class="text-secondary">退会</b>
        　     <% end %>
            </td>
          <% end %>
        </tbody>
      </tabel>
        <div></div>

    </div>
  </div>
</div>