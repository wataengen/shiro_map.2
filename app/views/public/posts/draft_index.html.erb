<div class="container p-3">
  <div class="row">
  <div class="col-12">
    <h3>下書き一覧</h3>
    <% if @posts.nil? %>
        <div>まだ下書きはありません</div>
      <% else %>
        <% @posts.each do |post| %>
        <div class="row">
          <div>
            <%= image_tag post.image, size: "100x100" %>
          </div>
          <div>コメント</div>
          <div>
            <%= link_to post.post_text, edit_post_path(post.id) %>
          </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>
</div>
