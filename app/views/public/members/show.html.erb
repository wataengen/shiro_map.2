<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3>マイページ</h3>
      <div>
        <%= render 'public/members/members_profile', member: @member %>
      </div>
    <div>
      <%= render 'members_bar', member: @member %>
    </div>
    <div>
      <% if @posts.blank? %>
        <div>まだ投稿はありません</div>
      <% else %>
        <%= render 'public/shared/post_index', posts: @posts %>
      <% end %>
    </div>
    <div>
      <% if params[:id] = current_member.id %>
        <%= link_to new_post_path do %>
          <buttun class="btn btn-success">新規投稿する</buttun>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
</div>
