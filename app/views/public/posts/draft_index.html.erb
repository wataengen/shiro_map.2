<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3>下書き一覧</h3>
      <% if @posts.blank? %>
        <div>まだ下書きはありません</div>
      <% else %>
        <% @posts.each do |post| %>
          <% if post.images.attached? %>
            <div class="col">
              <% post.images.each do |image| %>
                <%= image_tag image, class: "object-fit-cover", size: "100x100" %>
              <% end %>
            </div>
          <% end %>
          <div class="row">
            <div class="col">
              <%= link_to post.post_text, edit_post_path(post.id) %>
            </div>
            <div class="col">
              <%= link_to post.created_at.strftime('%Y/%m/%d %H/%M/%S'), post_path(post.id) %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
