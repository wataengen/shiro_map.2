<%= render 'public/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
  <div class="col-12">
    <div>ニックネーム</div>
    <div>
      <%= @member.nick_name %>
    </div>
    <div>プロフィール</div>
    <div>
      <%= @member.profile %>
    </div>
    <div>
      <% if params[:id] = current_member.id %>
        <%= link_to edit_member_path(current_member.id) do %>
          <buttun class="btn btn-success">プロフィールを編集する</buttun>
        <% end %>
      <% end %>
    </div>
    <div>
      <%= render 'public/members/members_bar', member: @member %>
    </div>
    <div>
       <% if @post_favorites.nil? %>
        <div>まだいいねはありません</div>
      <% else %>
        <% @post_favorites.each do |post| %>
        <div>
          <div>
            <%= image_tag post.image, size: "200x200" %>
          </div>
          <div>
            <%= post.post_text %>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
    <div>
      <% if params[:id] = current_member.id %>
        <%= link_to new_post_path do %>
          <buttun class="btn btn-success">新規投稿する</buttun>
        <% end %>
      <% end %>
    </div>

  </div>
</div>
</div>
<%= render 'public/shared/footer.html.erb' %>