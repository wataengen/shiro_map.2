<%= render 'admin/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3>投稿一覧　全件</h3>

      <tabel>
        <thead>
          <th>投稿ID</th>
          <th>投稿日時</th>
          <th>ニックネーム</th>
          <th>コメント</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <td><%= post.id %></td>
            <td>
              <%= link_to post.created_at.strftime('%Y/%m/%d %H/%M/%S'), admin_post_path(post.id) %>
            </td>
            <td>
              <%= post.member_id %>
            </td>
            <td><%= post.post_text %></td>
            <td>
              <% if post.display_status == true %>
                <b class="text-success">表示</b>
              <% else %>
                <b class="text-secondary">非表示</b>
        　     <% end %>
            </td>
          <% end %>
        </tbody>
      </tabel>

    </div>
  </div>
</div>