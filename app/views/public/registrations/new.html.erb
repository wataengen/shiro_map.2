 <div class="container p-3">
  <div class="row">
    <div class="col-md-12">

<h3>会員新規登録</h3>
<div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row mt-1">
    <div class="col-4">ニックネーム</div>
    <div class="col-6">
      <%= f.text_field :nick_name %>
    </div>

  </div>
  <div class="row mt-1">
    <div class="col-4">メースアドレス</div>
    <div class="col-6">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mt-1">
    <div class="col-4">パスワード
      <% if @minimum_password_length %>
        <em>（半角<%= @minimum_password_length %>文字以上）</em>
      <% end %><br />
    </div>
    <div class="col-6">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row mt-1">
    <div class="col-4">確認用パスワード</div>
    <div class="col-6">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>
  <div class="row mt-1">
    <div class="col-4"></div>
    <div class="col-4">
      <%= f.submit "新規登録", class: "btn btn-primary"  %>
    </div>
  </div>


  <% end %>
</div>
<%= render "public/shared/links" %>
    </div>
  </div>
</div>

