<div>
  <p>コメント件数：<%= post.post_comments.count %></p>
  <div class="container">
    <% post.post_comments.each do |post_comment| %>
    <div class="card">
      <div class="row">
        <% if post_comment.member.icon_image.attached? %>
          <div>
            <%= link_to member_path(post_comment.member) do  %>
              <%= image_tag post_comment.member.icon_image, size: "20x20" %>
            <% end %>
          </div>
        <% else %>
          <div>
            <%= link_to member_path(post_comment.member) do  %>
              <%= image_tag 'sengoku_busyou_shiki.png', size: "20x20" %>
            <% end %>
          </div>
        <% end %>
        <div>
          <%= link_to member_path(post_comment.member) do  %>
            <%= post_comment.member.nick_name %>
          <% end %>
        </div>
      </div>
      <div>
        <%= link_to post_comment_path(post_comment) do %>
          <%= post_comment.comment %>
        <% end %>
      </div>
      <div>
        <%= post_comment.created_at.strftime('%Y/%m/%d') %>
      </div>
    </div>

    <% end %>
  </div>
</div>

<div>
  <%= form_with model: [post, post_comment] do |f| %>
    <div class="row mt-1">
      <div class="col-9">
        <%= f.text_area :comment, size: "60x2", placeholder: "コメントをここに" %>
      </div>
      <div class="col-3">
        <%= f.submit "送信する", class: "btn btn-secondary"  %>
      </div>
    </div>
  <% end %>
</div>