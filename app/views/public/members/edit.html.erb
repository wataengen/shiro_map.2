<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <div>
        <%= form_with model: @member, "data-turbolinks": false do |f| %>
          <h3>プロフィール編集</h3>
          <div>ニックネーム</div>
          <div>
            <%= f.text_field :nick_name %>
          </div>
          <div>アイコン画像</div>
          <div>
            <%= f.file_field :image, accpet: "image/" %>
          </div>
          <div>プロフィール</div>
          <div>
            <%= f.text_area :profile %>
          </div>
          <div>
            <%= f.submit '変更を保存' %>
          </div>
        <% end %>
        <div class="col-md-4">
          <div class="actions">
            <%= link_to "退会する", members_confirm_quit_member_path, class: "btn btn-danger mt-4" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
