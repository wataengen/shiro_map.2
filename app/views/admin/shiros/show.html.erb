<%= render 'admin/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
  <div class="col-12">
    <h3>城詳細画面</h3>
    <div>
      <%= image_tag @shiro.image, size: "200x200" %>
    </div>
    <div>城名</div>
    <div>
      <%= @shiro.name %>
    </div>
    <div>城詳細</div>
    <div>
      <%= @shiro.detail %>
    </div>
    <div>城マップ情報</div>
    <div>
      <%= @shiro.shiro_map %>
    </div>

    <div class="row">
      <div class="col-md-3">表示ステータス</div>
        <div class="col-md-9">
          <% if @shiro.display_status == true %>
            <b class="text-success">表示</b>
          <% else %>
            <b class="text-secondary">非表示</b>
        　<% end %>
      </div>
    </div>
    <div>
      <%= link_to edit_admin_shiro_path(@shiro.id) do %>
        <buttun class="btn btn-success">編集する</buttun>
      <% end %>
    </div>

  </div>
</div>
</div>