<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3>タイムライン</h3>
      <div>
        <% if @posts.blank? %>
          <div>まだ投稿はありません</div>
        <% else %>
          <% if member_signed_in? %>
            <%= render 'public/shared/post_index', posts: @followers_posts %>
          <% else %>
            <%= render 'public/shared/post_index', posts: @posts %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= render 'public/shared/new_post_btn' %>
      </div>
    </div>
  </div>
</div>
