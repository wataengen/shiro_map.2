<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <div>
        <% if @post.images.attached? %>
          <% @post.images.each do |image| %>
            <%= image_tag image, class: "object-fit-cover", size: "200x200" %>
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <div>
          <% if @post.member.icon_image.attached? %>
            <p><%= image_tag @post.member.icon_image, size: "100x100" %></p>
          <% else %>
            <P><%= image_tag 'sengoku_busyou_shiki.png', size: "100x100" %></P>
          <% end %>
        </div>
        <div>
          <% if member_signed_in? %>
            <% if current_member == @post.member %>
              <%= link_to @post.member.nick_name, mypage_path %>
            <% else %>
              <%= link_to @post.member.nick_name, member_path(@post.member.id) %>
            <% end %>
          <% else %>
            <%= link_to @post.member.nick_name, member_path(@post.member.id) %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-9">
          <%= @post.post_text %>
        </div>
        <div class="col-3">
          <% if member_signed_in? %>
            <% if @post.member_id == current_member.id %>
              <%= link_to edit_post_path(@post.id) do %>
                <buttun class="btn btn-info">投稿を編集する</buttun>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div>
        <% if member_signed_in? %>
        <% @post_tags.each do |tag| %>
        <i class="fa-sharp fa-solid fa-tag"></i>
          <%= link_to tag.name,searches_search_tag_index_path(tag_id: tag.id) %>
        <% end %>
        <% end %>
      </div>



      <div>
        <% if member_signed_in? %>
          <% if @post.post_favorited_by?(current_member) %>
            <%= link_to post_post_favorites_path(@post), method: :delete do %>
              <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= @post.post_favorites.count %> いいね
            <% end %>
          <% else %>
            <%= link_to post_post_favorites_path(@post), method: :post do %>
              <i class="fas fa-heart" aria-hidden="true"></i>
              <%= @post.post_favorites.count %> いいね
            <% end %>
          <% end %>
        <% else %>
          <%= link_to post_post_favorites_path(@post), method: :post do %>
              <i class="fas fa-heart" aria-hidden="true"></i>
              <%= @post.post_favorites.count %> いいね
            <% end %>
          <% end %>
      </div>

      <div>
        <p>コメント件数：<%= @post.post_comments.count %></p>
          <% @post.post_comments.each do |post_comment| %>
            <% if post_comment.member.icon_image.attached? %>
              <p><%= image_tag post_comment.member.icon_image(100,100) %></p>
            <% else %>
              <P><%= image_tag 'sengoku_busyou_shiki.png', size: "100x100" %></P>
            <% end %>
            <%= post_comment.member.nick_name %>
            <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            <%= link_to post_comment_path(post_comment) do %>
             <%= post_comment.comment %>
            <% end %>
          <% end %>
      </div>
      <%= form_with model: [@post, @post_comment] do |f| %>
      <div class="row">
        <div class="col-6">
          <%= f.text_area :comment, size: "60x3", placeholder: "コメントをここに" %>
        </div>
        <div class="col-3">
          <%= f.submit "送信する", class: "btn btn-secondary"  %>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
