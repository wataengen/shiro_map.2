<div class="container p-3">
  <div class="row">
    <div class="col-12">

      <h3>城検索</h3>

      <%= render 'search_bar' %>

        <% if @shiros.blank? %>
          <div>城情報はありません</div>
        <% else %>
          <% @shiros.each do |shiro| %>
            <div class="row">
              <div>
                <% if shiro.images.attached? %>
                  <% shiro.images.each do |image| %>
                    <%= image_tag image.variant(resize_to_limit: [200, 200]) %>
                  <% end %>
                <% else %>
                  <%= image_tag asset_path("nagoyajou.png"), size: "100x100" %>
                <% end %>
              </div>
              <div>
                <div>
                  <%= link_to shiro.name, shiro_path(shiro.id) %>
                </div>
                <div>
                  <%= shiro.detail %>
                </div>
                <div>
                  <%= shiro.address %>
                </div>
              </div>

            </div>

          <% end %>
        <% end %>
    </div>
  </div>
</div>
