<%= render 'public/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
  <div class="col-12">
    <div>画像</div>
    <div>
      <%= image_tag @post.image, size: "200x200" %>
    </div>
    <div>コメント</div>
