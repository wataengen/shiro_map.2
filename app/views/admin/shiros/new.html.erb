<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @shiro, url: admin_shiros_path, "data-turbolinks": false do |f| %>
      <h3>城新規登録</h3>
      <div class="row">
        <div class="col-3">城画像</div>
        <div class="col-6">
          <%= f.file_field :images, accpet: "image/", multiple: true %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">城名</div>
        <div class="col-6">
          <%= f.text_field :name, size: 15 %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">城詳細</div>
        <div class="col-6">
          <%= f.text_area :detail, size: "60x5" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">城住所情報</div>
        <div class="col-6">
          <%= f.text_field :address, size: 15 %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">表示ステータス</div>
        <div class="col-6">
          <%= f.radio_button :display_status, :true, checked: true, class: "mt-2"  %>
          <%= f.label :display_status, "表示" %>
          <%= f.radio_button :display_status, :false %>
          <%= f.label :display_status, "非表示" %>
        </div>
        <div class="col-3">
          <%= f.submit '新規登録', class: "btn btn-success"  %>
        </div>

      </div>

      <% end %>
    </div>
  </div>
</div>