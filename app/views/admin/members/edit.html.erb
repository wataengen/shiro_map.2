<%= render 'admin/shared/header.html.erb' %>
<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <%= form_with model: @member, url: admin_member_path(@member.id), "data-turbolinks": false do |f| %>
    <h3><%= @member.nick_name %>さんの会員情報編集</h3>
      <div>会員ID</div>
      <div>
        <%= @member.id %>
      </div>
      <div>ニックネーム</div>
      <div>
        <%= f.text_field :nick_name %>
      </div>
      <div>メールアドレス</div>
      <div>
        <%= f.text_field :email %>
      </div>
      <div class="row">
          <div class="col-3">退会ステータス</div>
          <div class="col-6">
            <%= f.radio_button :display_status, :true, checked: true, class: "mt-2"  %>
            <%= f.label :display_status, "有効" %>
            <%= f.radio_button :display_status, :false %>
            <%= f.label :display_status, "退会" %>
          </div>
        </div>

      <div>
        <%= f.submit '変更を保存' %>
      </div>

    <% end %>
    </div>
  </div>
</div>