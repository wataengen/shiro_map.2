<div id="follow_btn_<%= member.id %>">
  <% if member_signed_in? %>
    <% if current_member.following?(member) %>
      <%= link_to "フォロー外す", member_relationships_path(member.id), method: :delete, class: "btn btn-danger", remote:true, data: {"turbolinks" => false} %>
    <% else %>
      <%= link_to "フォローする", member_relationships_path(member.id), method: :post, class: "btn btn-success", remote:true, data: {"turbolinks" => false} %>
    <% end %>
  <% end %>
</div>