<div class="container p-3">
  <div class="row">
  <div class="col-12">

    <%= form_with model: @post, "data-turbolinks": false do |f| %>
    <h3>新規投稿</h3>
      <% if @post.errors.any? %>
         <%= @post.errors.count %>件のエラーが発生しました
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      <% end %>
      <div class="row">
        <div class="col-3">画像</div>
        <div class="col-6">
          <%= f.file_field :images, accpet: "image/", multiple: true %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">コメント</div>
        <div class="col-6">
          <%= f.text_area :post_text, size: "60x5" %>
        </div>
      </div>
      <div class="row">
        <div class="col-3">
          <%= f.label :draft_status, "投稿を公開する" %>
          <%= f.check_box :draft_status, checked: true %>
        </div>
      </div>
      <div class="row">
        <div class="col-3">タグ</div>
        <div class="col-6">
          <%= f.text_field :name, value: @tag_list, size: 15 %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-3">
          <%= f.submit '投稿する', class: "btn btn-success" %>
        </div>
        <% end %>
        <div class="col-3">
          <%= link_to posts_draft_index_member_path(current_member) do %>
            <buttun class="btn btn-secondary">下書き一覧を見る</buttun>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
