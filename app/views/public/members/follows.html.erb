<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3>フォロー(<%= @members.count %>)</h3>

      <table class="table">
        <thead>
          <th>ニックネーム</th>
          <th>プロフィール</th>
          <th></th>
        </thead>
        <% if @members.blank? %>
          <tbody>
            <td>まだフォロワーはいません</td>
          </tbody>
        <% else %>
          <% @members.each do |member| %>
          <tbody>
            <td>
              <%= link_to member.nick_name, member_path(member.id) %>
            </td>
            <td>
             <%= member.nick_name %>
            </td>
            <td>
              <%= render 'public/members/follow_btn', member: member %>
            </td>
          </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>