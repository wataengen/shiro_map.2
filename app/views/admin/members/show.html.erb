<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <div class="col-9">
          <div class="row">
            <div>会員ID</div>
            <div>
              <%= @member.id %>
            </div>
          </div>
          <div class="row">
            <div>ニックネーム</div>
            <div>
              <%= @member.nick_name %>
            </div>
          </div>
          <div class="row">
            <div>メールアドレス</div>
            <div>
              <%= @member.email %>
            </div>
          </div>
          <div class="row">
            <div>ステータス</div>
            <div>
              <% if @member.is_deleted == true %>
                <b class="text-secondary">退会</b>
              <% else %>
                <b class="text-success">有効</b>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-3">
          <% if params[:id] = current_member.id %>
            <%= link_to edit_member_path(current_member.id) do %>
              <buttun class="btn btn-success">編集する</buttun>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>