<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3>投稿詳細</h3>

        <div>コメントID</div>
        <div><%= @post.id %></div>
          <div>
            <%= @post.created_at.strftime('%Y/%m/%d %H/%M/%S') %>
          </div>
          <div>ニックネーム</div>
          <div>
            <%= @post.member_id %>
          </div>
          <div>投稿文</div>
          <div>
            <%= @post.post_text %>
          </div>
          <div>
            <% if @post.display_status == true %>
              <b class="text-success">表示</b>
            <% else %>
              <b class="text-secondary">非表示</b>
        　    <% end %>
          </div>
          <div>
            <%= link_to edit_admin_post_path(@post.id) do %>
              <buttun class="btn btn-success">編集する</buttun>
            <% end %>
          </div>

    </div>
  </div>
</div>