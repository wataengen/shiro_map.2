<div class="container p-3">
  <div class="row">
    <div class="col-12">
      <h3><%= @member.nick_name %>のページ</h3>
      <div class="row">
        <div class="col-9">
          <%= render 'public/members/members_profile', member: @member %>
        </div>
        <div class="col-3">
          <% if current_member != @member %>
            <% if current_member.following?(@member) %>
              <%= link_to "フォロー外す", member_relationships_path(@member.id), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "フォローする", member_relationships_path(@member.id), method: :post, class:"btn btn-success" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <div>
        <%= render 'members_bar', member: @member %>
      </div>
      <div>
        <% if @posts.blank? %>
          <div>まだ投稿はありません</div>
        <% else %>
          <%= render 'public/shared/post_index', posts: @posts %>
        <% end %>
      </div>
      <div>
        <%= render 'public/shared/new_post_btn' %>
      </div>
    </div>
  </div>
</div>
